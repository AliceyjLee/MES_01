<!--start content-->
<main class="page-content">

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header py-3 bg-transparent">
                    <h5 class="mb-0">상품 등록</h5>
                </div>
                <div class="card-body">
                    <div class="border p-3 rounded">
                        <form asp-controller="Product" asp-action="create" asp-route-returnurl="@ViewData["ReturnUrl"]" enctype="multipart/form-data" method="post" class="row g-3">
                            <div class="col-12">
                                <label class="form-label">상품 이미지</label>
                                <input class="form-control" type="file" id="image" accept="image/*" onchange="setThumbnail(event);"  />
                                <div id="image_container"></div>

                                <script>
                                    function setThumbnail(event) {
                                        var reader = new FileReader();

                                        reader.onload = function (event) {
                                            var img = document.createElement("img");
                                            img.setAttribute("src", event.target.result);
                                            document.querySelector("div#image_container").appendChild(img);
                                        };

                                        reader.readAsDataURL(event.target.files[0]);
                                    }
                                </script>

                            </div>
                            <div class="col-12">
                                <label class="form-label">상품명</label>
                                <input type="text" class="form-control" placeholder="Product title">
                            </div>
                            <div class="col-12">
                                <label class="form-label">수량</label>
                                <input type="text" class="form-control" placeholder="Product title">
                            </div>
                            <div class="col-12">
                                <label class="form-label">가격</label>
                                <input type="text" class="form-control" placeholder="Enter tags">
                            </div>
                            <div class="col-12">
                                <label class="form-label">상태</label>
                                <input type="text" class="form-control" placeholder="Enter tags">
                            </div>
                            <div class="col-12">
                                <label class="form-label">날짜</label>
                                <input type="date" class="form-control" placeholder="Enter tags">
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary px-4">상품 등록</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div><!--end row-->

</main>
<!--end page main-->